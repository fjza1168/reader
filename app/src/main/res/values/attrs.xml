<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollRefreshLayout">
        <attr name="layout_scroll_empty" format="reference"/>
        <attr name="text_error_tip" format="string"/>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="layout_refresh_empty" format="reference"/>
        <attr name="layout_refresh_error" format="reference"/>
        <attr name="layout_refresh_loading" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="BookTextView">
        <attr name="bookColor" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="EasyRatingBar">
        <attr name="rateNum" format="integer"/>
        <attr name="rating" format="integer"/>
        <attr name="rateNormal" format="reference"/>
        <attr name="rateSelect" format="reference"/>
        <attr name="rateInterval" format="dimension"/>
        <attr name="isIndicator" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="lib_pub_ScrollTab">
        <attr name="lib_pub_stab_type">
            <enum name="view" value="0" />
            <enum name="view_group" value="1" />
        </attr>
        <attr name="lib_pub_stab_titles" format="string" />
        <attr name="lib_pub_stab_avag" format="boolean" />
        <attr name="lib_pub_stab_padding" format="dimension" />
        <attr name="lib_pub_stab_indicatorType">
            <enum name="trend" value="0" />
            <enum name="translation" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="lib_pub_stab_indicatorColor" format="color" />
        <attr name="lib_pub_stab_indicatorWidth" format="dimension" />
        <attr name="lib_pub_stab_indicatorWeight" format="dimension" />
        <attr name="lib_pub_stab_indicatorRadius" format="dimension" />
        <attr name="lib_pub_stab_indicatorPadding" format="dimension" />
        <attr name="lib_pub_stab_duration" format="integer" />
    </declare-styleable>
</resources>